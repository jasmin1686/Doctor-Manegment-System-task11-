@model Doctor
@{
    ViewData["Title"] = "Complete Appointment";
}

<h1>Complete Appointment with @Model.Name  </h1>

<form id="appointmentForm" method="post">
    <input type="hidden" name="DrId" value="@Model.Id" />
    <div class="form-group">
        <label for="patientName">Patient Name:</label>
        <input type="text" placeholder="patientName" class="form-control" id="patientName" name="Name">
    </div>
    <div class="form-group">
        <label for="appointmentDate">Appointment Date:</label>
        <input type="date" class="form-control" id="appointmentDate" name="AppointmentDate">
    </div>
    <div class="form-group">
        <label for="appointmentTime">Appointment StartTime :</label>
        <input type="time"  class="form-control" id="appointmentTime" name="StartTime">
    </div>
 
    <br />
    <button type="submit"  class="btn btn-primary" id="submitBtn">Complete Appointment</button>
</form>

